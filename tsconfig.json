{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./dist",
		"module": "esnext",
		"outDir": "./dist",
		"target": "esnext",
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"preserveConstEnums": true,
		"sourceMap": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
